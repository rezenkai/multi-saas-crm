# AI Service Configuration
APP_NAME=AI Service
APP_VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8003

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL_DEFAULT=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# Database Configuration (PostgreSQL with pgvector)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/salesforce_clone

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=3600

# Identity Service Integration
IDENTITY_SERVICE_URL=http://localhost:3002
JWT_SECRET=your-super-secret-jwt-key-make-it-long-and-complex

# Core Service Integration
CORE_SERVICE_URL=http://localhost:3001

# AI Feature Flags
LEAD_SCORING_ENABLED=true
OPPORTUNITY_INSIGHTS_ENABLED=true
COMMUNICATION_AI_ENABLED=true
RAG_SYSTEM_ENABLED=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=INFO