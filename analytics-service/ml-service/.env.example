# ML/AI Service Configuration
# ClickHouse подключение
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=analytics_db

# FastAPI настройки
API_HOST=0.0.0.0
API_PORT=8007
API_WORKERS=1
LOG_LEVEL=INFO

# ML модели настройки
MODEL_STORAGE_PATH=/app/ml_models
MAX_MODEL_AGE_DAYS=30
DEFAULT_FORECAST_PERIODS=30

# Prophet настройки
PROPHET_SEASONALITY_MODE=additive
PROPHET_GROWTH_MODE=linear
PROPHET_UNCERTAINTY_SAMPLES=1000

# Anomaly Detection настройки
ISOLATION_FOREST_CONTAMINATION=0.1
ANOMALY_THRESHOLD=0.05
MIN_SAMPLES_FOR_TRAINING=100

# Churn Prediction настройки
CHURN_THRESHOLD=0.5
CHURN_MODEL_RETRAIN_DAYS=7
MIN_CUSTOMER_HISTORY_DAYS=30

# Revenue Intelligence настройки
OPENAI_API_KEY=your_openai_key_here
WHISPER_MODEL=whisper-1
MAX_AUDIO_FILE_SIZE_MB=25
SENTIMENT_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest

# Security настройки
API_KEY_HEADER=X-API-Key
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8088
RATE_LIMIT_PER_MINUTE=100

# Redis кэширование (опционально)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL_SECONDS=3600